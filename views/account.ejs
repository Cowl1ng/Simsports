<%- include('./games/_headers_public.ejs') %>
<div class="page-header">
<h1 class="mt-4">Dashboard</h1>
</div>
<p class="lead mb-3">Welcome <%= name %></p>
<p class="lead mb-3">Your balance is: <%= balance  %></p>
<h2 class="mt-4">Your bets</h2>
<div class="container" role="navigation">
  <ul class="nav nav-pills">
    <li role="presentation" class="active; nav-link"><a href="/account">Open</a></li>
    <li role="presentation" class="nav-link"><a href="/account/settled">Settled</a></li>
  </ul>
</nav>
<div>
<% userBets.forEach(userBet => {  %>
  <% if(userBet.settled == false) { %>
  <p class="lead mb-3">£ <%= userBet.stake %> bet on <%= userBet.type %> for the game <%= userBet.game_title %>. If it wins you will win: £ <%= userBet.winnings %></p>
  <!-- <p class="lead mb-3">£ <%= userBet.stake %> bet on <%= userBet.type %> for the game <a href="/games/<%= userBet.game %>"><%= userBet.game_title %></a>. If it wins you will win: £ <%= userBet.winnings %></p> -->
  <% } else { %>
  <% } %>
<% }) %>
</div>
<div>
<a href="/users/logout" class="btn btn-secondary">Logout</a>
</div>